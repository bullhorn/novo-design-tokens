@import url(variables.css);
@import url(novo-base.css);

html {
  font-family: var(--font-family-base);
  font-size: var(--font-size-base, 10px);
  color: var(--font-color-base, #333);
}

body {
  font-family: var(--font-family-body);
  font-size: var(--font-size-body, 1.2rem);
  line-height: 1.2;
  word-wrap: break-word;
  text-rendering: optimizeLegibility;
}

.palette {
  display: flex;
  flex-flow: row nowrap;
  list-style-type: none;
}
.swatch {
  display:flex;
  border-radius: 50%;
  width: 50px;
  height: 50px;
  align-items: center;
  justify-content: center;
}
.swatch-label {
  display:flex;
  font-weight: bold;
  height: 50px;
  align-items: center;
  justify-content: center;
  width: 100px;
}

{{#each colors as |color|}}
{{#each ../swatches as |swatch|}}
.swatch-{{color}}-{{swatch}} {
  background: var(--color-hsl-{{color}}-{{swatch}});
  color: hsla(0, 0%, calc(calc(65% - {{swatch}}%) * 100), 100%);
}
{{/each}}
