{
  "name": "novo-design-tokens",
  "version": "0.0.9",
  "description": "Design tokens for the Novo Design System",
  "homepage": "https://github.com/bullhorn/novo-design-tokens#readme",
  "license": "MIT",
  "main": "lib/variables.js",
  "module": "lib/variables.esm.js",
  "files": [
    "lib",
    "css",
    "scss"
  ],
  "scripts": {
    "build": "npm run build:tokens && npm run build:base && npm run build:docs",
    "build:tokens": "node scripts/build.js",
    "build:docs": "node scripts/docs.js",
    "build:base": "sass ./base/index.scss ./css/novo-base.css",
    "docs:serve": "npx serve ./docs",
    "clean": "rm -rf build",
    "prepublishOnly": "npm run build && npm run minify-css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "minify-css": "foreach -g \"css/**/*.css\" -i \"css/**/*.min.css\" -t 10 -x \"npx cleancss -o #{dir}/#{name}.min.css #{path}\""
  },
  "devDependencies": {
    "clean-css-cli": "4.3.0",
    "foreach-cli": "1.8.1",
    "handlebars": "^4.7.7",
    "loggy": "^1.0.8",
    "polished": "^4.1.2",
    "sass": "^1.50.1",
    "style-dictionary": "^3.7.0"
  }
}
